{
  "manifest_version": 3,
  "name": "文緒ブックマーク v2",
  "version": "0.0.2",
  "description": "descriptions example",
  "icons": {
    "128": "humio_128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/service_worker/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content_scripts/index.ts"],
      "matches": ["*://vcard.ameba.jp/*"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules_1.json"
      },
      {
        "id": "ruleset_2",
        "enabled": false,
        "path": "rules_2.json"
      }
    ]
  },
  "permissions": [
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://vcard.ameba.jp/*",
    "*://google.com/*",
    "*://microsoft.com/*"
  ]
}
